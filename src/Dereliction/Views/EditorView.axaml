<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             xmlns:vm="using:Dereliction.ViewModels"
             xmlns:v="clr-namespace:Dereliction.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Dereliction.Views.EditorView">

    <Design.DataContext>
        <vm:EditorViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="200,1*" RowDefinitions="30,30,1*" Margin="4"
          IsEnabled="{Binding !OperationState.Busy, Mode=OneWay}">
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Content="New Script" Command="{Binding NewScriptAsync}"
                    CommandParameter="{Binding $parent[v:EditorView]}" />
            <Button Content="Refresh Script Folder" Command="{Binding RefreshScriptFolder}" />
            <Button Content="Save Current Script" Command="{Binding SaveScriptAsync}"
                    CommandParameter="{Binding $parent[v:EditorView]}" />
            <Button Content="Open Operation View" Command="{Binding $parent[v:MainWindow].ShowOperationView}" />
        </StackPanel>
        <Label Content="Scripts" Grid.Row="1" Grid.Column="0" />

        <Border BorderBrush="White" BorderThickness="1" Grid.Row="2" Grid.Column="0">
            <TreeView Items="{Binding ScriptList}"
                      SelectionChanged="FsTreeView_OnSelectionChanged">
                <TreeView.ItemTemplate>
                    <TreeDataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Border>
        <Label Content="{Binding EditorState.DisplayName}" Grid.Row="1" Grid.Column="1" />
        <Border BorderBrush="White" BorderThickness="1" Grid.Row="2" Grid.Column="1">
            <avalonEdit:TextEditor Name="Editor"
                                   Background="Gray"
                                   Margin="10"
                                   Foreground="White"
                                   SyntaxHighlighting="C#ScriptDark"
                                   HorizontalScrollBarVisibility="Auto"
                                   VerticalScrollBarVisibility="Visible"
                                   TextBlock.FontSize="12" />
        </Border>
    </Grid>
</UserControl>
