<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>8</LangVersion>
        <Authors>riina</Authors>
        <Description>File processing</Description>
        <Copyright>Copyright Â©2020 teamRokuro</Copyright>
        <PackageProjectUrl>https://github.com/teamRokuro/Fp</PackageProjectUrl>
        <RepositoryUrl>https://github.com/teamRokuro/Fp</RepositoryUrl>
        <Company>teamRokuro</Company>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <PackOnBuild>true</PackOnBuild>
        <Owners>riina</Owners>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageVersion>0.2.2</PackageVersion>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <NoWarn>NU5105</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.Buffers" Version="4.5.*" />
        <PackageReference Include="System.Memory" Version="4.5.*" />
    </ItemGroup>

    <ItemGroup>
        <None Include="NOTICE.Fp.txt" Pack="true" PackagePath="lib/netstandard2.0/">
            <Link>%(FileName)%(Extension)</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
