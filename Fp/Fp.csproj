<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;netstandard2.0</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <Authors>riina</Authors>
    <Description>File processing</Description>
    <Copyright>Copyright Â©2020 teamRokuro</Copyright>
    <PackageProjectUrl>https://github.com/teamRokuro/Fp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/teamRokuro/Fp</RepositoryUrl>
    <Company>teamRokuro</Company>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <PackOnBuild>true</PackOnBuild>
    <Owners>riina</Owners>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageVersion>0.4.3</PackageVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <NoWarn>NU5105</NoWarn>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
    <PackageReference Include="System.Buffers" Version="4.5.1"/>
    <PackageReference Include="System.Memory" Version="4.5.4"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Esper.Accelerator" Version="0.3.3"/>
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.1"/>
  </ItemGroup>

  <ItemGroup>
    <None Include="NOTICE.Fp.txt" Pack="true" PackagePath="lib/netstandard2.0/">
      <Link>%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="NOTICE.Fp.txt" Pack="true" PackagePath="lib/net5.0/">
      <Link>%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
